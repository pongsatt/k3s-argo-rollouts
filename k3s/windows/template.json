{
	"builders": [
		{
			"type": "virtualbox-iso",
			"guest_os_type": "Ubuntu_64",
			"iso_url": "ubuntu-16.04.7-server-amd64.iso",
			"iso_checksum": "b23488689e16cad7a269eb2d3a3bf725d3457ee6b0868e00c8762d3816e25848",
			"iso_checksum_type": "sha256",
			"output_directory": "output-{{user `vm_name`}}",
			"disk_size": "{{user `disk`}}",
			"headless": "{{user `headless`}}",
			"http_directory": "http",
			"boot_wait": "5s",
			"boot_command": [
				"<enter><wait>",
				"<f6><esc>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs>",
				"/install/vmlinuz ",
				"initrd=/install/initrd.gz ",
				"net.ifnames=0 ",
				"auto-install/enable=true ",
				"debconf/priority=critical ",
				"netcfg/choose_interface=eth0 ",
				"hostname={{ user `hostname` }} ",
				"preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg",
				"<enter>"
			],
			"vm_name": "{{user `vm_name`}}",
			"ssh_timeout": "60m",
			"ssh_username": "{{user `user`}}",
			"ssh_password": "{{user `pass`}}",
			"shutdown_command": "sudo systemctl poweroff",
			"vboxmanage": [
				[
					"modifyvm",
					"{{.Name}}",
					"--memory",
					"{{user `mem`}}"
				],
				[
					"modifyvm",
					"{{.Name}}",
					"--cpus",
					"{{user `cpu`}}"
				],
				[
					"modifyvm",
					"{{.Name}}",
					"--nic1",
					"nat"
				],
				[
					"modifyvm",
					"{{.Name}}",
					"--nic2",
					"bridged",
					"--nictype2",
					"82545EM",
					"--bridgeadapter2",
					"{{user `adapter`}}",
					"--macaddress2",
					"{{user `mac`}}"
				]
			]
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"execute_command": "echo '{{user `pass`}}' | sudo -E -S sh '{{ .Path }}'",
			"inline": [
				"sed -i '/dhcp/s/^/#/g' /etc/network/interfaces",
				"echo 'iface eth0 inet static' >> /etc/network/interfaces",
				"echo 'address {{user `ip`}}' >> /etc/network/interfaces",
				"echo 'netmask {{user `netmask`}}' >> /etc/network/interfaces",
				"echo 'gateway {{user `gateway`}}' >> /etc/network/interfaces",
				"echo 'dns-nameservers 8.8.8.8 8.8.4.4' >> /etc/network/interfaces"
			]
		}
	],
	"variables": {
		"headless": "true",
		"user": "packer",
		"pass": "packer",
		"netmask": "255.255.255.0",
		"gateway": "192.168.1.1",
		"disk": "15000",
		"mem": "2048",
		"cpu": "1"
	}
}